/**index.wxss**/
.search-block {
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding: 0 20rpx 30rpx;
  background-color: #ffac2c;
  color: #fff;
}
.search-block__box {
  margin-top: 50rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}
.list-wrap {
  padding: 30rpx;
}
.list-content {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 15rpx 0;
  margin-bottom: 30rpx;
}
.list-content__left {
  width: 210rpx;
}
.list-content__left__img {
  max-width: 100%;
  height: 280rpx;
}
.list-content__right {
  padding: 0 30rpx;
}
.list-content__right__rate .stars-unit{
  justify-content: flex-start;
}
.list-content__right__author {
  font-size: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin: 15rpx 0;
  color:#656565;
}
.list-content__right__detail {
  width: 98%;
  font-size:28rpx;
  color:#656565;
  word-break:break-all;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  overflow:hidden;
  line-height:38rpx;
}
