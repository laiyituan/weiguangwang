.search-position {
  position: absolute;
  bottom: 60rpx;
  left: 3%;
}
.ul-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  padding: 20rpx 15rpx;
}
.li-list {
  width: 202rpx;
  margin-bottom: 50rpx;
  overflow: hidden;
}
.li-list__img {
  width: 202rpx;
  height: 282rpx;
}
.li-list__text {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}
.li-list__text__tt {
  font-weight: bold;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

